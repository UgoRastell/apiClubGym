{% extends "base.html.twig" %}

{% block title %}
    Ajouter un club
{% endblock %}

{% block body %}
    <h1>Nouveau club</h1>


    {{form_start(formView)}}

    {{form_errors(formView)}}

 
    <div class="row">
        <div class="col">
            {{form_row(formView.name)}}
            {{form_row(formView.lieu)}}
        </div>
        <div class="col">
            {{form_row(formView.description)}}
        </div>
    </div>
 
    <button type="submit"class="btn btn-primary"><i class="fas fa-save"></i>Ajouter le club</button>
        
    {{form_end(formView)}}
{% endblock %}

